        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="318" Margin="19,230,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="344" Panel.ZIndex="-1" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Visible"/>
